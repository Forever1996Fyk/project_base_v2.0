<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javaweb.MichaelKai.mapper.HotPostMapper">
        <!-- 新增 -->
        <insert id="addHotPost">
            INSERT INTO tb_hot_post(<include refid="hotPost_add_key"><property name="alias" value="" /></include>)
            VALUES (<include refid="hotPost_add_val"><property name="alias" value="" /></include>)
        </insert>

        <!-- 批量新增 -->
        <insert id="addHotPosts">
            INSERT INTO tb_hot_post(<include refid="hotPost_add_key"><property name="alias" value="" /></include>)
            VALUES
            <foreach collection="list" item="item" index="index" separator=",">
                (<include refid="hotPost_add_val"><property name="alias" value="item."/></include>)
            </foreach>
        </insert>

        <!-- 修改 -->
        <update id="editHotPostById">
            UPDATE tb_hot_post
            <set>
                <include refid="hotPost_set_if"><property name="alias" value="" /></include>
            </set>
            WHERE id = #{id}
        </update>

        <!-- 批量修改 -->
        <update id="editHotPostByIds">
            UPDATE tb_hot_post
            <set>
                <include refid="hotPost_set_if"><property name="alias" value="" /></include>
            </set>
            WHERE id IN
            <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </update>

        <!-- 删除 -->
        <update id="delHotPostById">
            update tb_hot_post SET status = 0 WHERE id = #{id}
        </update>

        <!-- 批量删除 -->
        <update id="delHotPostByIds">
            UPDATE tb_hot_post SET status = 0 WHERE id IN
            <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </update>

        <!-- 真删除 -->
        <delete id="delHotPostRealById">
            DELETE FROM tb_hot_post WHERE id = #{id}
        </delete>

        <!-- 真批量删除 -->
        <delete id="delHotPostRealByIds">
            DELETE FROM tb_hot_post WHERE id IN
            <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </delete>

        <!-- 清空 -->
        <delete id="delHotPostReals">
            DELETE FROM tb_hot_post
        </delete>

        <!-- 查询用户管理列表 -->
        <select id="getHotPosts" parameterType="Map" resultType="Map">
            SELECT <include refid="hotPost_select_cond" />
            FROM tb_hot_post a
            <where>
                <include refid="hotPost_where_if" />
                AND a.status in (1, 2)
            </where>
            ORDER BY a.status ASC, a.create_time DESC
        </select>

        <!-- 根据id查询用户 -->
        <select id="getHotPostById" resultType="Map">
            SELECT <include refid="hotPost_select_cond_one"/>
            FROM tb_hot_post a
            WHERE a.status in (1, 2) and a.id = #{id}
        </select>


        <!-- 查询的选择项, 增删字段时调整 -->
        <sql id="hotPost_select_cond">
            a.id id
                            
                                            
                                    , a.title title
                                            
                                    , a.content content
                                            
                                    , a.type type
                                            
                                    , a.sort sort
                                            
                                    , a.remark remark
                                            
                                    , a.status status
                                            
                                    , a.create_user_id createUserId
                                            
                                    , a.create_time createTime
                                            
                                    , a.update_user_id updateUserId
                                            
                                    , a.update_time updateTime
                                    </sql>

        <!-- (单个)查询的选择项, 增删字段时调整 -->
        <sql id="hotPost_select_cond_one">
            a.id id
                                                                            , a.title title
                                                                , a.content content
                                                                , a.type type
                                                                , a.sort sort
                                                                , a.remark remark
                                                                , a.status status
                                                                , a.create_user_id createUserId
                                                                , a.create_time createTime
                                                                , a.update_user_id updateUserId
                                                                , a.update_time updateTime
                                    </sql>

        <!-- 查询条件 -->
        <sql id="hotPost_where_if">
                                            <if test="id != null and id != '' and id != 'null' and id != 'undefined'">
                    AND a.id = #{id}
                </if>
                                                            <if test="title != null and title != '' and title != 'null' and title != 'undefined'">
                    AND a.title = #{title}
                </if>
                                                            <if test="content != null and content != '' and content != 'null' and content != 'undefined'">
                    AND a.content = #{content}
                </if>
                                                            <if test="type != null">
                    AND a.type = #{type}
                </if>
                                                            <if test="sort != null">
                    AND a.sort = #{sort}
                </if>
                                                            <if test="remark != null and remark != '' and remark != 'null' and remark != 'undefined'">
                    AND a.remark = #{remark}
                </if>
                                                            <if test="status != null">
                    AND a.status = #{status}
                </if>
                                                            <if test="createUserId != null and createUserId != '' and createUserId != 'null' and createUserId != 'undefined'">
                    AND a.create_user_id = #{createUserId}
                </if>
                                                            <if test="createTime != null and createTime != '' and createTime != 'null' and createTime != 'undefined'">
                    AND a.create_time = #{createTime}
                </if>
                                                            <if test="updateUserId != null and updateUserId != '' and updateUserId != 'null' and updateUserId != 'undefined'">
                    AND a.update_user_id = #{updateUserId}
                </if>
                                                            <if test="updateTime != null and updateTime != '' and updateTime != 'null' and updateTime != 'undefined'">
                    AND a.update_time = #{updateTime}
                </if>
                                    </sql>


        <!-- (批量)新增键, 增删字段时调整 -->
        <sql id="hotPost_add_key">
            id
                                                        
                    , title
                                            
                    , content
                                            
                    , type
                                            
                    , sort
                                            
                    , remark
                                            
                    , status
                                                                                                                                                    </sql>

        <!-- (批量)新增值, 增删字段时调整 -->
        <sql id="hotPost_add_val">
            #{id}
                                                                            , #{title}
                                                                , #{content}
                                                                , #{type}
                                                                , #{sort}
                                                                , #{remark}
                                                                , #{status}
                                                                                                                                                    </sql>

        <!-- (批量修改的条件,增减字段时调整) -->
        <sql id="hotPost_set_if">
                                                                                                                                <if test="title != null and title != '' and title != 'null' and title != 'undefined'">
                                title = #{title},
                            </if>
                                                                                                                                                                <if test="content != null and content != '' and content != 'null' and content != 'undefined'">
                                content = #{content},
                            </if>
                                                                                                                                                                <if test="type != null">
                                type = #{type},
                            </if>
                                                                                                                                                                <if test="sort != null">
                                sort = #{sort},
                            </if>
                                                                                                                                                                <if test="remark != null and remark != '' and remark != 'null' and remark != 'undefined'">
                                remark = #{remark},
                            </if>
                                                                                                                                                                <if test="status != null">
                                status = #{status}
                            </if>
                                                                                                                                                                                                                                                                                                                                                </sql>
</mapper>